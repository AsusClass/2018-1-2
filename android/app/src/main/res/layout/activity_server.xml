<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.match.ServerActivity">

        <TextView
            android:id="@+id/tv_server_tips"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="准备上传"
            android:textColor="#ff0000"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center_vertical"
            android:text="操作" />

        <Button
            android:id="@+id/btn_server_search"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:onClick="onRemoteSearch"
            android:text="远程搜索" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center_vertical"
            android:text="文件名" />


        <EditText
            android:id="@+id/et_server_file_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="请输入文件名称"
            android:text="1.txt"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center_vertical"
            android:text="IP地址" />

        <EditText
            android:id="@+id/et_server_ip_address"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="请输入网络地址"
            android:text="192.168.137.1"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center_vertical"
            android:text="关键字" />

        <EditText
            android:id="@+id/et_server_key"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="请输入关键字"
            android:text=""
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center_vertical"
            android:text="计数" />

        <TextView
            android:id="@+id/tv_server_key_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center_vertical"
            android:text="上传时间" />

        <TextView
            android:id="@+id/tv_server_upload_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0ms" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center_vertical"
            android:text="搜索时间" />

        <TextView
            android:id="@+id/tv_server_search_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0ms" />

    </LinearLayout>
</ScrollView>

